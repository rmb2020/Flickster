<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:id="@+id/txtTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbMovieRating"
        android:layout_below="@+id/txtTitle"
        style="@style/movieRatingBar"
        android:layout_marginTop="10dp"
        android:numStars="10"
        android:minHeight="47dp"
        android:maxHeight="57dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/tvSynopsis"
        android:layout_alignStart="@+id/tvSynopsis" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPopularity"
        android:layout_below="@+id/tvSynopsis"
        android:layout_alignLeft="@+id/tvSynopsis"
        android:layout_alignStart="@+id/tvSynopsis" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSynopsis"
        android:minHeight="68dp"
        android:layout_below="@+id/rbMovieRating"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtTitle"
        android:layout_alignStart="@+id/txtTitle" />

</RelativeLayout>